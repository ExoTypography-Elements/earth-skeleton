a {
transition: color .4s;
  color: color-accent;
  text-decoration: none;
  &:hover {
  transition: color .3s;
    color: darken(color-accent, 10%);
  }
}
a:active  {
  transition: color .3s;
  color: #007BE6;
}
/* lift links */
a.lift {
transition: color .4s;
  text-decoration:none;
  border-bottom: 2px solid color-accent;
  box-shadow: inset 0 -4px 0 color-accent;
  color: inherit;
  transition: background 0.1s cubic-bezier(.33,.66,.66,1);
}

a.lift:hover {
transition: color .3s;
  background: color-accent;
}
