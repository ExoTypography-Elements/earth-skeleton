  border-radius: 0;
  font-family: font-family;
  font-size: 14px;
  color: inherit;
  height: 32px;
  padding: 6px 10px 8px;
  width: 100%;
  min-width: 180px;
}
textarea{
 
    
   }
input.is-active {
  border-color: #0078d7 !important;
}
input:hover, textarea {
  border-color: #767676;
}

input:focus,{
  background:  #fff;
  color: #000;
  border-color: color-accent;
