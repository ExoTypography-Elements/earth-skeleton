// Responsive margins

.m-flex { margin: 2rem; }
.mt-flex { margin-top: 2rem; }
.mr-flex { margin-right: 2rem; }
.mb-flex { margin-bottom: 2rem; }
.ml-flex { margin-left: 2rem; }

@media (min-width: 48em) and (max-width: 64em) {
  .m-flex { margin: 3rem; }
  .mt-flex { margin-top: 3rem; }
  .mr-flex { margin-right: 3rem; }
  .mb-flex { margin-bottom: 3rem; }
  .ml-flex { margin-left: 3rem; }
}

@media (min-width: 64em) {
  .m-flex { margin: 4rem; }
  .mt-flex { margin-top: 4rem; }
  .mr-flex { margin-right: 4rem; }
  .mb-flex { margin-bottom: 4rem; }
  .ml-flex { margin-left: 4rem; }
}
